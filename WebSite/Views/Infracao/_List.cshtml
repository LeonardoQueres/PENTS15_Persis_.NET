@model ICollection<InfracaoListaViewModel>

<table class="table table-striped table-bordered datatable">
    <colgroup>
        <col width="150" />
        <col width="150" />
        <col width="150" />
        <col width="80" />
    </colgroup>
    <thead>
        <tr>
            <th>Cnpj</th>
            <th>Razão Social</th>
            <th>Multa</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cnpj</td>
                <td>@item.RazaoSocial</td>
                <td>@item.Multa</td>
                <td class="text-center">
                    <a class="btn btn-xs btn-default" asp-action="visualizar" title="Visualizar" asp-route-id="@item.Id">
                        <i class="fa fa-fw fa-search-plus"></i>
                    </a>
                    <a class="btn btn-xs btn-default" asp-action="editar" title="Editar" asp-route-id="@item.Id">
                        <i class="fa fa-fw fa-edit"></i>
                    </a>
                    <a class="btn btn-xs btn-default" title="Excluir" data-fw-delete-item href="@Url.Action("excluir", "Infracao", new { IdProcess = item.ProcessoId, id = item.Id })">
                        <i class="fa fa-fw fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>